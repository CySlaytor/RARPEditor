<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<RootNamespace>RA_RP_Editor</RootNamespace>
		<Nullable>enable</Nullable>
		<UseWindowsForms>true</UseWindowsForms>
		<ImplicitUsings>enable</ImplicitUsings>

		<!-- Metadata -->
		<Authors>CySlaytor</Authors>
		<Company>RetroAchivements</Company>
		<Copyright>© 2025 RetroAchivements</Copyright>
		<Product>RA-RP Editor</Product>
		<Description>A dedicated editor for creating, validating, and previewing RetroAchievements Rich Presence scripts.</Description>

		<!-- Versioning -->
		<Version>1.0.0</Version>
		<FileVersion>1.0.0</FileVersion>
		<AssemblyVersion>1.0.0</AssemblyVersion>

		<!-- This specific property removes the git commit hash suffix from Product Version -->
		<IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>
	</PropertyGroup>

</Project>